@using CleanArchitecture.Application.Products.ViewModels

@model IList<ProductModel>

<h2>@ViewBag.Title</h2>
<hr>

<table class="table table-stripped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x[0].Id)
            </th>
            <th>@Html.DisplayNameFor(x => x[0].Name)</th>
            <th>@Html.DisplayNameFor(x => x[0].Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">
                    There are no products
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="ProductsEdit"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           role="button">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                <a class="btn btn-sm btn-outline-primary" asp-controller="ProductsCreate" asp-action="Create" role="button">
                    Create
                </a>
            </td>
        </tr>
    </tfoot>
</table>